<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SuperHeroApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Base.Theme.Trabajapp.myTheme">

        <item name="colorPrimary">@color/accentDark</item>
        <item name="colorSecondary">@color/accentDark</item>
        <item name="colorAccent">@color/accentDark</item>

        <item name="toolbarStyle">@style/myToolbarStyle</item>
        <item name="cardViewStyle">@style/myCardStyle</item>

    </style>

    <style name="myToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/ToolbarBackgroundDark</item>
        <item name="android:backgroundTint">@color/ToolbarBackgroundDark</item>
        <item name="titleTextColor">@color/ToolbarTextDark</item>
    </style>

    <style name="ToolbarTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/ToolbarTextDark</item>
    </style>

    <style name="myCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/CardBackgroundDark</item>
        <item name="android:textViewStyle">@style/cardTextStyle</item>
    </style>

    <style name="cardTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>
</resources>